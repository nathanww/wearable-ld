<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/connectionWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš  We're not receiving data from the Fitbit. Try syncing the Fitbit and making sure the Dream app is running."
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <TextView
        android:id="@+id/userPrompt"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:text="User ID"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start dreaming!" />

    <TextView
        android:id="@+id/appRunningHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App is running. Enjoy your dreams! \n\n Keep your phone's screen on and keep the phone plugged in.\n\n If you're woken by the sound, you can stop it by moving your wrist. To exit the app completely, tap the button below."
        android:textColor="#FFFCFC"
        android:textSize="22sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:visibility="gone" />
</LinearLayout>